<Window x:Class="EasySave.Views.RemoteConsoleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.Views"
        mc:Ignorable="d"
        Title="Console Deportee" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Serveur:" VerticalAlignment="Center"/>
            <TextBox Width="120" Margin="5,0" Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text=":" VerticalAlignment="Center"/>
            <TextBox Width="60" Margin="5,0" Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Connexion" Margin="10,0,0,0" Command="{Binding ConnectCommand}"/>
            <Button Content="Rafraichir" Margin="10,0,0,0" Command="{Binding RefreshCommand}"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Jobs}" SelectedItem="{Binding SelectedJob}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="40"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Etat" Binding="{Binding State}" Width="100"/>
                <DataGridTextColumn Header="Progression" Binding="{Binding Progress}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="2" Content="Lancer le job selectionne" Height="30" Margin="0,10,0,0" Command="{Binding StartJobCommand}" IsEnabled="{Binding SelectedJob, Converter={StaticResource NotNullConverter}}"/>
    </Grid>
</Window>
