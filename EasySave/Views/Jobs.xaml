<Page x:Class="EasySave.Views.Jobs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:EasySave.Converters"
      Title="{Binding LanguageViewModel[JobsTitle]}" Height="250" Width="400">

    <Page.Resources>
        <converters:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter"/>
    </Page.Resources>

    <StackPanel Margin="20">

        <!-- Name -->
        <Grid Margin="0,0,0,10">
            <TextBox Text="{Binding JobName, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
            <TextBlock Text="{Binding LanguageViewModel[JobName]}"
                       Foreground="Gray"
                       Margin="10,0,262,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding JobName, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- Source -->
        <Grid Margin="0,0,0,10">
            <TextBox Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding LanguageViewModel[SourcePath]}"
                       Foreground="Gray"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding SourcePath, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
        </Grid>

        <!-- Target -->
        <Grid Margin="0,0,0,10">
            <TextBox Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding LanguageViewModel[TargetPath]}"
                       Foreground="Gray"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding TargetPath, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
        </Grid>

        <ComboBox ItemsSource="{Binding BackupTypes}" 
          SelectedItem="{Binding SelectedBackupType}"
          Margin="0,0,0,10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="Complete">
                                        <Setter Property="Text" Value="{Binding DataContext.LanguageViewModel[CompleteBackup], RelativeSource={RelativeSource AncestorType=Page}}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding}" Value="Differential">
                                        <Setter Property="Text" Value="{Binding DataContext.LanguageViewModel[DifferentialBackup], RelativeSource={RelativeSource AncestorType=Page}}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>



        <Button Content="{Binding LanguageViewModel[Validate]}" Command="{Binding ValidateCommand}" Height="18"/>
    </StackPanel>
</Page>
