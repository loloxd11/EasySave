<Page x:Class="EasySave.Views.Jobs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="{Binding [JobsTitle]}" Height="250" Width="400">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <StackPanel Margin="20">

        <!-- Name -->
        <Grid Margin="0,0,0,10">
            <TextBox Text="{Binding JobName, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
            <TextBlock Text="{Binding [JobName]}"
                       Foreground="Gray"
                       Margin="10,0,262,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding JobName, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>

        <!-- Source -->
        <Grid Margin="0,0,0,10">
            <TextBox Text="{Binding SourcePath, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding [SourcePath]}"
                       Foreground="Gray"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding SourcePath, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>

        <!-- Target -->
        <Grid Margin="0,0,0,10">
            <TextBox Text="{Binding TargetPath, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding [TargetPath]}"
                       Foreground="Gray"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding TargetPath, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>

        <ComboBox ItemsSource="{Binding BackupTypes}"
          SelectedItem="{Binding SelectedBackupType}"
          DisplayMemberPath="."
          Margin="0,0,0,10" />


        <Button Content="{Binding [Validate]}" Command="{Binding ValidateCommand}" Height="18" Click="Button_Click"/>
    </StackPanel>
</Page>
