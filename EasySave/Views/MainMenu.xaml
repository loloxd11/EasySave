<Window x:Class="EasySave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:EasySave.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.Views"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodels:JobsViewModel}"
        Title="EasySave" Height="650" Width="1100" WindowStartupLocation="CenterScreen"
        Background="#f5faff">
    <Grid>
        <!-- Light blue gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#eaf6ff" Offset="0"/>
                <GradientStop Color="#f5faff" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header section -->
        <Border Grid.Row="0" Background="#e3f0ff" CornerRadius="20" Margin="20,20,20,0" Height="90">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.10"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="EASYSAVE BY PROSOFT"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="44"
                           FontWeight="Bold"
                           Foreground="#1976d2"/>
                <Separator Margin="60,0,60,0" Background="#90caf9" Height="2"/>
            </StackPanel>
        </Border>

        <!-- Settings and remote buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,40,0">
            <Button x:Name="SettingsButton" Content="⚙ Settings" Width="130" Height="40"
                    FontWeight="SemiBold" Foreground="#1976d2" Padding="10,5" Margin="0,0,10,0"
                    Background="#e3f0ff" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16"
                    Cursor="Hand"  Click="SettingsButton_Click">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.10"/>
                </Button.Effect>
            </Button>
            <Button x:Name="RemoteConsoleButton" Content="Remote Console" Width="160" Margin="0,0,10,0"
                    FontWeight="SemiBold" Foreground="#1976d2" Padding="10,5"
                    Background="#e3f0ff" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16"
                    Cursor="Hand" Click="OpenRemoteConsole_Click">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.10"/>
                </Button.Effect>
            </Button>
            <Button x:Name="RemoteServerButton" Content="Remote Server" Width="170" Margin="0,0,10,0"
                    FontWeight="SemiBold" Foreground="#1976d2" Padding="10,5"
                    Background="#e3f0ff" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16"
                    Cursor="Hand" Click="RemoteServerButton_Click">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.10"/>
                </Button.Effect>
            </Button>
            <TextBlock x:Name="RemoteServerStatus" Text="Inactive" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#e53935" FontWeight="Bold"/>
        </StackPanel>

        <!-- DataGrid section -->
        <Border Grid.Row="2" Margin="20,20,20,0" Background="White" CornerRadius="16" BorderBrush="#b6dafe" BorderThickness="1">
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock Text="Backup Jobs" FontSize="24" FontWeight="Bold" Foreground="#1976d2" Margin="0,0,0,10"/>
                <Separator Margin="0,0,0,10" Background="#1976d2" Height="2"/>
                <CheckBox Content="Select All"
                          IsChecked="{Binding AreAllJobsSelected, Mode=TwoWay}"
                          Margin="5,10,0,10"
                          FontWeight="Bold"
                          FontSize="16"/>
                <DataGrid x:Name="BackupJobsGrid"
                          ItemsSource="{Binding BackupJobs}"
                          AutoGenerateColumns="False"
                          Height="320"
                          Margin="0,0,0,0"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          SelectedItem="{Binding SelectedJob, Mode=TwoWay}"
                          GridLinesVisibility="All"
                          BorderBrush="#b6dafe"
                          BorderThickness="1"
                          RowHeight="44"
                          ColumnHeaderHeight="36"
                          HeadersVisibility="All"
                          Background="#f5faff"
                          AlternatingRowBackground="#e3f0ff"
                          HorizontalGridLinesBrush="#b6dafe"
                          VerticalGridLinesBrush="#b6dafe">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#e3f0ff"/>
                            <Setter Property="Foreground" Value="#1976d2"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Height" Value="36"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#b6dafe"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="40" Header="✓">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              HorizontalAlignment="Center"
                                              Checked="JobCheckBox_Checked" 
                                              Unchecked="JobCheckBox_Unchecked"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="2*" />
                        <DataGridTextColumn Header="Target" Binding="{Binding Destination}" Width="2*" />
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                        <DataGridTextColumn Header="Status" Binding="{Binding State, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                        <DataGridTemplateColumn Header="Progress" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding Progress}" Maximum="100"
                                                     Height="24" Margin="2" Background="#e3f0ff" Foreground="#1976d2"/>
                                        <TextBlock Text="{Binding Progress, StringFormat={}{0}%}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="#1976d2"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- Action buttons column -->
                        <DataGridTemplateColumn Header="" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                                        <Button Width="36" Height="36" Background="#1976d2" BorderBrush="#b6dafe" Foreground="White" FontWeight="Bold" Margin="2" ToolTip="Resume"
                                                Cursor="Hand" BorderThickness="1" Click="ResumeButton_Click"
                                                Padding="0">
                                            <Button.Effect>
                                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.10"/>
                                            </Button.Effect>
                                            <Viewbox Width="18" Height="18">
                                                <Path Data="M0,0 L0,20 L17,10 Z" Fill="White" Stretch="Uniform"/>
                                            </Viewbox>
                                        </Button>
                                        <Button Width="36" Height="36" Background="#b6dafe" BorderBrush="#b6dafe" Foreground="#1976d2" FontWeight="Bold" Margin="2" ToolTip="Pause"
                                                Cursor="Hand" BorderThickness="1" Click="PauseButton_Click"
                                                Padding="0">
                                            <Button.Effect>
                                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.10"/>
                                            </Button.Effect>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                <Rectangle Width="6" Height="18" Fill="White"/>
                                                <Rectangle Width="6" Height="18" Fill="White" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Width="36" Height="36" Background="#e53935" BorderBrush="#b6dafe" Foreground="White" FontWeight="Bold" Margin="2" ToolTip="Stop"
                                                Cursor="Hand" BorderThickness="1" Click="StopButton_Click"
                                                Padding="0">
                                            <Button.Effect>
                                                <DropShadowEffect BlurRadius="4" ShadowDepth="0" Opacity="0.10"/>
                                            </Button.Effect>
                                            <Rectangle Width="18" Height="18" Fill="White"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Main action buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,30">
            <Button Content="Add" Click="AddBackupJob_Click"
                    Width="120" Height="42" FontWeight="SemiBold" Foreground="#1976d2" Padding="10,5" Margin="5"
                    Background="#e3f0ff" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16" Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
                </Button.Effect>
            </Button>
            <Button Content="Edit" Command="{Binding EditJobCommand}"
                    Width="120" Height="42" Margin="5"
                    FontWeight="SemiBold" Foreground="#1976d2" Padding="10,5"
                    Background="#e3f0ff" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16" Cursor="Hand"
                    IsEnabled="{Binding SelectedJobIndices.Count, Converter={StaticResource SingleSelectionToEnabledConverter}}">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
                </Button.Effect>
            </Button>
            <Button Content="Delete" Command="{Binding DeleteJobCommand}"
                    Width="120" Height="42" Margin="5"
                    FontWeight="SemiBold" Foreground="#e53935" Padding="10,5"
                    Background="#fff" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16" Cursor="Hand"
                    IsEnabled="{Binding SelectedJobIndices.Count, Converter={StaticResource AtLeastOneSelectionToEnabledConverter}}">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
                </Button.Effect>
            </Button>
            <Button Content="Execute" Click="ExecuteBackupJob_Click"
                    Width="140" Height="42" FontWeight="SemiBold" Foreground="#1976d2" Padding="10,5" Margin="5"
                    Background="#b6dafe" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16" Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
                </Button.Effect>
            </Button>
            <Button Content="Pause All" Click="PauseAllJobs_Click"
                    Width="140" Height="42" FontWeight="SemiBold" Foreground="#1976d2" Padding="10,5" Margin="5"
                    Background="#e3f0ff" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16" Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
                </Button.Effect>
            </Button>
            <Button Content="Resume All" Click="ResumeAllJobs_Click"
                    Width="140" Height="42" FontWeight="SemiBold" Foreground="#1976d2" Padding="10,5" Margin="5"
                    Background="#e3f0ff" BorderBrush="#b6dafe" BorderThickness="1" FontSize="16" Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.10"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</Window>
