<Window x:Class="EasySave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:EasySave.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasySave" Height="720" Width="1020" Background="#f4f4f4" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Style for action buttons inside the DataGrid -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTipService.ShowDuration" Value="4000"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Application title -->
        <Border Grid.Row="0" CornerRadius="8" Background="#D0E6FF" Padding="10" Margin="0,10,0,20">
            <TextBlock Text="EASYSAVE BY PROSOFT"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#333"
                       FontFamily="Segoe UI Black"/>
        </Border>

        <!-- Settings button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button x:Name="SettingsButton"
                    Content="⚙ Settings"
                    Width="100"
                    Margin="0,0,10,0"
                    Background="#ddd"
                    BorderBrush="#aaa"
                    Padding="5"
                    Click="SettingsButton_Click"/>
        </StackPanel>

        <!-- Main content: DataGrid and control buttons -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <!-- Checkbox to select all jobs -->
            <CheckBox Content="{Binding LanguageViewModel[SelectAll]}"
                      IsChecked="{Binding AreAllJobsSelected, Mode=TwoWay}"
                      Margin="0,0,0,10"
                      FontWeight="Bold"/>

            <!-- DataGrid containing the jobs -->
            <Border CornerRadius="8" BorderThickness="1" BorderBrush="#ccc" Background="White" Height="278">
                <DataGrid x:Name="BackupJobsGrid"
                          ItemsSource="{Binding BackupJobs}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          SelectedItem="{Binding SelectedJob, Mode=TwoWay}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Margin="0"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <!-- Checkbox column for selecting jobs -->
                        <DataGridTemplateColumn Width="40">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="✓" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              HorizontalAlignment="Center"
                                              Checked="JobCheckBox_Checked"
                                              Unchecked="JobCheckBox_Unchecked"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Other columns -->
                        <DataGridTextColumn Header="{Binding LanguageViewModel[JobName]}" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="{Binding LanguageViewModel[SourcePath]}" Binding="{Binding Source}" Width="2*"/>
                        <DataGridTextColumn Header="{Binding LanguageViewModel[TargetPath]}" Binding="{Binding Destination}" Width="2*"/>
                        <DataGridTextColumn Header="{Binding LanguageViewModel[BackupType]}" Binding="{Binding Type}" Width="*"/>
                        <DataGridTextColumn Header="{Binding LanguageViewModel[Status]}" Binding="{Binding State}" Width="*"/>

                        <!-- Progress and control buttons -->
                        <DataGridTemplateColumn Header="{Binding LanguageViewModel[Progress]}" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding Progress}" Maximum="100" Height="18" Margin="2"/>
                                        <TextBlock Text="{Binding Progress, StringFormat={}{0}%}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <!-- Play button -->
                                            <Button Style="{StaticResource ActionButtonStyle}"
                                                    ToolTip="Start"
                                                    Command="{Binding DataContext.PlayJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                <Path Data="M0,0 L0,20 L17,10 Z" Fill="#4CAF50"/>
                                            </Button>

                                            <!-- Pause button -->
                                            <Button Style="{StaticResource ActionButtonStyle}"
                                                    ToolTip="Pause"
                                                    Command="{Binding DataContext.PauseJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                <Grid>
                                                    <Rectangle Width="6" Height="18" Fill="#FFC107" Margin="2,0,0,0"/>
                                                    <Rectangle Width="6" Height="18" Fill="#FFC107" Margin="10,0,0,0"/>
                                                </Grid>
                                            </Button>

                                            <!-- Stop button -->
                                            <Button Style="{StaticResource ActionButtonStyle}"
                                                    ToolTip="Stop"
                                                    Command="{Binding DataContext.StopJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}">
                                                <Rectangle Width="16" Height="16" Fill="#F44336"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Control buttons below the DataGrid -->
            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="{Binding LanguageViewModel[Add]}"
                        Click="AddBackupJob_Click"
                        Margin="10"
                        Padding="10,5"
                        Background="#5cb85c"
                        Foreground="White"/>
                <Button Content="{Binding LanguageViewModel[Edit]}"
                        Command="{Binding EditJobCommand}"
                        Margin="10"
                        Padding="10,5"
                        Background="#0275d8"
                        Foreground="White"/>
                <Button Content="{Binding LanguageViewModel[Delete]}"
                        Command="{Binding DeleteJobCommand}"
                        Margin="10"
                        Padding="10,5"
                        Background="#d9534f"
                        Foreground="White"/>
                <Button Content="{Binding LanguageViewModel[Execute]}"
                        Click="ExecuteBackupJob_Click"
                        Margin="10"
                        Padding="10,5"
                        Background="#f0ad4e"
                        Foreground="White"/>
                <Button Content="{Binding LanguageViewModel[PauseALL]}"
                        Command="{Binding PauseAllJobsCommand}"
                        Margin="10"
                        Padding="10,5"
                        Background="#000000"
                        Foreground="White"
                        IsEnabled="{Binding IsAnyJobSelected}"/>
                <Button Content="{Binding LanguageViewModel[StopAll]}"
                        Command="{Binding StopAllJobsCommand}"
                        Margin="10"
                        Padding="10,5"
                        Background="#d9534f"
                        Foreground="White"
                        IsEnabled="{Binding IsAnyJobSelected}"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
